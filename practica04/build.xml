<?xml version="1.0" encoding="utf-8"?>
<project name="ordenamientos" default="ordenamientos.jar" basedir="." >

  <property name="build.dir" value="build" />
  <property name="src.dir"   value="src" />
  <property name="doc.dir"   value="doc" />

  <target name="ordenamientos.jar" depends="compile.ordenador">
    <jar jarfile="ordenamientos.jar">
      <zipfileset dir="${build.dir}" prefix="" />
      <manifest>
	<attribute name="Main-Class" value="ordenamientos.Interfaz"/>
      </manifest>
    </jar>
  </target>

  <target name="compile.ordenador">
    <mkdir dir="${build.dir}"/>
    <javac srcdir="${src.dir}"
	   destdir="${build.dir}"
	   debug="true"
	   debuglevel="lines,vars,source"
	   includeantruntime="false"
	   deprecation="true"
	   nowarn="off">
    </javac>
  </target>

  <target name="doc" depends="ordenamientos.jar">
    <mkdir dir="${doc.dir}"/>
    <javadoc packagenames="ordenamientos.*"
	     sourcepath="src"
	     defaultexcludes="yes"
	     destdir="${doc.dir}"
	     charset="UTF-8"
	     author="false"
	     version="false"
	     use="true"
	     windowtitle="Implementación Ordenamientos">
      <doctitle><![CDATA[<h1>Implementación Ordenamientos</h1>]]></doctitle>
      <link href="http://docs.oracle.com/javase/8/docs/api/" />
    </javadoc>
  </target>

  <target name="clean">
    <delete file="ordenamientos.jar"/>
    <delete dir="${build.dir}"/>
    <delete dir="${doc.dir}"/>
  </target>

</project>
